<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.andrei15193.bitbucketbrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ro.andrei15193.bitbucketbrowser.BitBucketBrowserApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ro.andrei15193.bitbucketbrowser.UsernameSelectionActivity"
            android:label="@string/title_activity_user_selection" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ro.andrei15193.bitbucketbrowser.RepositoriesActivity"
            android:label="@string/title_activity_repositories" >
        </activity>
        <activity
            android:name="ro.andrei15193.bitbucketbrowser.RepositoryActivity"
            android:label="@string/title_activity_repository" >
        </activity>
    </application>

</manifest>